<header>
  <h1 class="headline">Books</h1>
</header>

<table>
  <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
  </tr>

  <%# ループ文 %>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>     <%# クリックされたらshow画面に移動 %>
      <td>edit</td>
      <td>destroy</td>
   <%# クリックされたら「Are you sure?」とアラームを表示させる%>
    </tr>
  <% end %>
  <%# ループ文 %>

</table>

<section>
  <h2>New book</h2>

  <%# form_for %>
  <%= form_for(@book, url: '/books') do |f| %>

    <p>Title</p>    
    <%= f.text_field :title %>
    <%# 入力フォームを作成 %>

    <p>Body</p>
    <%= f.text_area :body %>
    <%# 入力フォームを作成 %>
    
    <%= f.submit 'Create Book' %>
    <%# クリエイトをクリックされたらshowページに移行 %>

  <% end %>   <%# ← <%= としてしまう時多い！気をつけるように %>
  <%# form_for %>
</section>